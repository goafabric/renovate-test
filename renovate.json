{
  "baseBranches": [
    "main"
  ],
  "extends": [
    "config:recommended",
    "docker:disableMajor"
  ],
  "dependencyDashboard": false,
  "enabledManagers": ["gradle","github-actions","dockerfile"],
  "packageRules": [
    {
      "matchDatasources": ["docker"],
      "matchPackageNames": ["ibm-semeru-runtimes"],
      "versioning": "regex:^open-(?<major>\\d+)\\.(?<minor>\\d+)\\.(?<patch>\\d+)(?:\\.(?<patch2>\\d+))?_\\d+-jre$",

      "automerge": true,
      "automergeType": "branch",
      "groupName": "docker-updates"
    }
  ],
  "regexManagers": [
    {
      "fileMatch": ["build.gradle.kts"],
      "matchStrings": [
        "val baseImage\\s*=\\s*\"(?<depName>ibm-semeru-runtimes):open-(?<major>\\d+)\\.(?<minor>\\d+)\\.(?<patch>\\d+)(?:\\.(?<patch2>\\d+))?_(?<build>\\d+)-jre@sha256:[a-fA-F0-9]+\""
      ],
      "datasourceTemplate": "docker",
      "versioningTemplate": "regex:^open-(?<major>\\d+)\\.(?<minor>\\d+)\\.(?<patch>\\d+)(?:\\.(?<patch2>\\d+))?_(?<build>\\d+)-jre$",
      "currentValueTemplate": "open-{{major}}.{{minor}}.{{patch}}{{#if patch2}}.{{patch2}}{{/if}}_{{build}}-jre"
    }
  ]
}